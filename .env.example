# eGauge Energy Analysis Toolkit - Configuration
# Copy this file to .env and fill in your values

# ==========================================
# eGauge Device Credentials (REQUIRED)
# ==========================================
EGAUGE_URL=https://egauge83159.egaug.es
EGAUGE_USER=owner
EGAUGE_PASSWORD=your_password_here

# ==========================================
# Email Notifications (OPTIONAL)
# ==========================================
# Set EMAIL_ENABLED=true to enable email reports
EMAIL_ENABLED=false
EMAIL_TO=your@email.com
EMAIL_FROM=egauge-reports@yourdomain.com

# SMTP server configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
